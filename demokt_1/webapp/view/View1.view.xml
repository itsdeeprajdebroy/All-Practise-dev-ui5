<mvc:View controllerName="sap.rr.demokt1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <List id="_IDGenList" items="{path: '/Products'}" itemPress=".onItemPress">
            <ObjectListItem 
                id="_IDGenStandardListItem"
                title="{ProductName}" 
                type="Navigation" 
                icon="sap-icon://action"
                number="{UnitPrice}"
                numberState="{= ${Discontinued} ? 'Success' : 'Warning'}">
                    <ObjectAttribute id="_IDGenObjectAttribute" text="{QuantityPerUnit}"/>

            </ObjectListItem>
        </List>
    </Page>
</mvc:View>