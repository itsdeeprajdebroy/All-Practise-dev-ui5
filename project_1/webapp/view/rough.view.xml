<mvc:View controllerName="sap.dd.project1.controller.rough"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" title="{i18n>name}">
        <VBox id="_IDGenVBox1" xmlns="sap.m" xmlns:core="sap.ui.core">
  <!-- Top-Level Company List -->
    <List id="_IDGenList" headerText="Companies" items="{myModel>/companies}">
        <CustomListItem id="_IDGenCustomListItem">
        <VBox id="_IDGenVBox2">
            <ObjectHeader id="_IDGenObjectHeader" title="{myModel>name}" />

            <!-- Nested Department List -->
            <List id="_IDGenList1" headerText="Departments" items="{myModel>departments}">
            <CustomListItem id="_IDGenCustomListItem1">
                <VBox id="_IDGenVBox3">
                <ObjectListItem id="_IDGenObjectListItem" title="{myModel>dept}" />

                <!-- Nested Employee List -->
                <List id="_IDGenList2" headerText="Employees" items="{myModel>employees}" >
                    <StandardListItem id="_IDGenStandardListItem" 
                    title="{myModel>name}" 
                    description="{= ${myModel>active} ? 'Active' : 'Inactive'}" 
                    icon="{= ${myModel>active} ? 'sap-icon://employee' : 'sap-icon://employee-approvals'}"
                    iconInset="false"
                    type="Navigation"
                    />
                </List>
                </VBox>
            </CustomListItem>
            </List>
        </VBox>
        </CustomListItem>
    </List>
</VBox>
    </Page>
</mvc:View>